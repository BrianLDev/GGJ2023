.menu__button {
    width: 35%;
    height: 80%;
    -unity-background-scale-mode: stretch-to-fill;
    font-size: 30px;
}

.start__button {
    background-image: resource('Images/Start-Button');
}

.start__button:focus {
    background-image: resource('Images/Start-Button-Focused');
}

.start__button:hover {
    background-image: resource('Images/Start-Button-Focused');
}

.exit__button {
    background-image: resource('Images/Exit-Game-Button');
    top: 30px;
}

.exit__button:focus,
.exit__button:hover {
    background-image: resource('Images/Exit-Game-Button-Focused');
}

.exitMission__button {
    background-image: resource('Images/Exit-Mission-Button');
    top: 30px;
}

.exitMission__button:focus,
.exitMission__button:hover {
    background-image: resource('Images/Exit-Mission-Button-Focused');
}

.resume__button {
    background-image: resource('Images/Resume-Button');
}

.resume__button:focus,
.resume__button:hover {
    background-image: resource('Images/Resume-Button-Focused');
}

.restart__button {
    background-image: resource('Images/Restart-Mission-Button');
}

.restart__button:focus,
.restart__button:hover {
    background-image: resource('Images/Restart-Mission-Button-Focused');
}

.continue__button {
    background-image: resource('Images/Continue-Mission-Button');
}

.continue__button:focus,
.continue__button:hover {
    background-image: resource('Images/Continue-Mission-Button-Focused');
}
